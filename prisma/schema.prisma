// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserBadge {
  PRO
  TESTER
  DEFAULT
}

enum AuthProvider {
  DEFAULT
  DISCORD
  GITHUB
  GOOGLE
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id                String              @id @default(cuid())
  oauthId           String              @unique
  username          String              @unique
  description       String              @default("")
  avatar            String
  country           String              @default("")
  badge             UserBadge           @default(DEFAULT)
  followedBy        UserOnUser[]        @relation("followedBy")
  following         UserOnUser[]        @relation("following")
  testPresetHistory TestPresetHistory[]
  testPresets       TestPreset[]
  accessToken       String
  refreshToken      String
  authProvider      AuthProvider        @default(DEFAULT)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
}

model UserOnUser {
  id        String   @id @default(cuid())
  child     User     @relation("following", fields: [childId], references: [id])
  childId   String
  parent    User     @relation("followedBy", fields: [parentId], references: [id])
  parentId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TestPresetHistory {
  id             String     @id @default(cuid())
  user           User       @relation(fields: [userId], references: [id])
  userId         String
  testPreset     TestPreset @relation(fields: [testPresetId], references: [id])
  testPresetId   String
  wpm            Float      @default(0)
  cpm            Float      @default(0)
  accuracy       Float      @default(0)
  keystrokes     Float      @default(0)
  correctChars   Float      @default(0)
  incorrectChars Float      @default(0)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

enum TestType {
  WORDS
  TIME
}

enum TestLanguage {
  ENGLISH
  SPANISH
}

model TestPreset {
  id                String              @id @default(cuid())
  type              TestType            @default(WORDS)
  language          TestLanguage        @default(ENGLISH)
  time              Int                 @default(0)
  words             Int                 @default(25)
  creatorImage      String              @default("")
  user              User?               @relation(fields: [userId], references: [id])
  userId            String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  TestPresetHistory TestPresetHistory[]
}
